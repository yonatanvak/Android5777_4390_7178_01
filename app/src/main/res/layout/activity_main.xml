<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/b"
    tools:context="com.example.android5777_4390_7178_01.Controller.MainActivity">

    <TextView
        android:text="Welcome"
        android:layout_width="match_parent"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="textStart" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUser"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:id="@+id/tvNameUser"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:text="Add Attraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonADDA"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/buttonADDB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add Business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonADDB"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textViewUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="get all attraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGetAtt"
        android:layout_marginTop="13dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="get all business "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b11111"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-medium"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/buttonADDA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/b11111"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGetAtt"
        android:layout_below="@+id/buttonGetAtt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
